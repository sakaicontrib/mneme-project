<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee  http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd"
	version="2.5">
    <display-name>etudes-mneme-tool</display-name>
    <description>etudes-mneme-tool</description>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/*View.xml
            /WEB-INF/*Fragment.xml
            /WEB-INF/applicationContext.xml
        </param-value>
    </context-param>

    <filter>
        <filter-name>sakai.request</filter-name>
        <filter-class>org.sakaiproject.util.RequestFilter</filter-class>
        <init-param>
            <param-name>upload.continueOverMax</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>upload.maxPerFile</param-name>
            <param-value>true</param-value>
        </init-param>
     </filter>

    <filter-mapping>
        <filter-name>sakai.request</filter-name>
        <servlet-name>sakai.mneme</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>

    <servlet>
        <servlet-name>sakai.mneme</servlet-name>
        <servlet-class>org.etudes.mneme.tool.MnemeServlet</servlet-class>
        <init-param>
            <param-name>defaultView</param-name>
            <param-value>list</param-value>
        </init-param>
        <init-param>
            <param-name>toolId</param-name>
            <param-value>sakai.mneme</param-value>
        </init-param>
        <init-param>
            <param-name>resourcePaths</param-name>
            <param-value>icons</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <listener>
        <listener-class>org.sakaiproject.util.ToolListener</listener-class>
    </listener>

    <listener>
        <listener-class>org.sakaiproject.util.SakaiContextLoaderListener</listener-class>
    </listener>

</web-app>
